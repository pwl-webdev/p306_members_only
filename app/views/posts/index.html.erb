<center>
<h1>Submited secrets</h1>

<table style = "border: 1px solid black;">
  <tr>
    <th>Title</th>
    <th colspan="3">Text</th>
    <th>Author</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td colspan="3"><%= post.body %></td>
      <% if logged_in? %>
      	<td><%= post.user.name %></td>
      <% else %>
      	<td>Anonymous</td>
      <% end %>
    </tr>
  <% end %>
</table>
</center>